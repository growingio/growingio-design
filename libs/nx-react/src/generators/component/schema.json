{
  "$schema": "http://json-schema.org/schema",
  "$id": "Component",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of component",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "directory": {
      "type": "string",
      "description": "The directory where is component to place",
      "x-prompt": "Where is the component placed?"
    }
  },
  "required": [
    "name",
    "directory"
  ]
}